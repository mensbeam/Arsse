<php>
    <env name="ARSSE_TEST_PGSQL_HOST"   value=""/>
    <env name="ARSSE_TEST_PGSQL_PORT"   value="5432"/>
    <env name="ARSSE_TEST_PGSQL_USER"   value="arsse_test"/>
